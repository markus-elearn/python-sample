function appendToFormatter(obj, stringToAppend) {
    if (typeof obj === 'object') {
        if (Array.isArray(obj)) {
            for (let item of obj) {
                appendToFormatter(item, stringToAppend);
            }
        } else {
            for (let key in obj) {
                if (key === 'formatter') {
                    obj[key] += stringToAppend;
                } else {
                    appendToFormatter(obj[key], stringToAppend);
                }
            }
        }
    }
}

// Your JSON object
const yourJsonObject = {
    key1: {
        formatter: 'old_value',
        other_key: 'other_value'
    },
    key2: [
        {
            formatter: 'old_value',
            nested_key: 'nested_value'
        }
    ]
};

const stringToAppend = '_appended';
appendToFormatter(yourJsonObject, stringToAppend);
console.log(JSON.stringify(yourJsonObject, null, 2));
